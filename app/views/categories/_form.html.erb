<%= simple_form_for(@category) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :category_id %>
    <%= f.input :category_id_s_name %>

    


<%= select_tag "activity", options_for_select([['NRA' ,'NRA'], ['RA', 'RA']]),  :prompt => "Select Activity Type"%>
    <%= f.input :category_name %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
